<%= form_with(model: achiever_habit) do |form| %>
<% if achiever_habit.errors.any? %>
  <div style="color: red">
    <h2><%= pluralize(achiever_habit.errors.count, "error") %>
      prohibited this achiever_habit from being saved:</h2>

    <ul>
      <% achiever_habit.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="field form-group">
  <%= form.label :habit_id, style: "display: block" %>
  <%= form.collection_select :habit_id, Habit.order(:name),:id,:name, include_blank: true %>
</div>

<div class="field form-group">
  <%= form.label :achiever_id, style: "display: block" %>
  <%= form.collection_select :achiever_id, Achiever.order(:name),:id,:name, include_blank: true %>
</div>

<div>
  <%= form.submit class:'btn btn-secondary', value: "Add achiever to the habit" %>
</div>
<% end %>
