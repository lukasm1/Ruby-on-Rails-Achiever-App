<%= render "table_header" %>

<%= render @quote %>

<%= render "table_footer" %>

<div>

  <% if user_signed_in? && current_user.id == 1 || user_signed_in? && current_user.id == @quote.user_id %>

    <%= link_to "Edit this quote", edit_quote_path(@quote), class:'btn btn-light', style:'margin-top:1%; margin-bottom: 1%' %>&nbsp

  <% end %>

  <%= link_to "Back to quotes", quotes_path, class:'btn btn-light', style:'margin-top:1%; margin-bottom: 1%' %>&nbsp

  <% if user_signed_in? && current_user.id == 1 || user_signed_in? && current_user.id == @quote.user_id %>

    <%= button_to "Destroy this quote", @quote, method: :delete, class:'btn btn-danger', style:'margin-top:1%; margin-bottom: 1%' %>

  <% end %>

</div>
